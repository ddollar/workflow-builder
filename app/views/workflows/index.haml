%table.table.table-bordered.table-hover
  %thead
    %tr.button
      %th.text.max    Workflow Name
      %th.text.nowrap Last Run
      %th.text.nowrap Duration
      %th.text.nowrap Status
      %th.right.nowrap
        %a.btn.btn-success{:href => "/workflows/new"} New Workflow
  %tbody
    - for workflow in @workflows
      %tr
        %th= workflow.name
        %th= # workflow.last_run.created_at
        %th= # workflow.last_run.duration
        %th= # workflow.last_run.status
